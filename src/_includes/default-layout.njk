<!doctype html>
<html lang="en">

<head>
    <meta name="viewport" content="initial-scale=1.0, width=device-width" > 
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    
    <!-- Theme color for browser chrome (chrome android) -->
    <meta name="theme-color" content="#1279a5">

    <!-- Primary Meta Tags -->
    <title>Vermont Code Camp | {{title}}</title>
    <meta name="title" content="{{title}}">
    <meta name="description" content="Vermont Code Camp is a full day event that brings together technology community members, students and professionals from around Vermont and beyond.">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://vt-code.netlify.com/">
    <meta property="og:title" content="{{title}}">
    <meta property="og:description" content="Vermont Code Camp is a full day event that brings together technology community members, students and professionals from around Vermont and beyond.">
    <meta property="og:image" content="/assets/event-sign.jpg">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@vtcodecamp">
    <meta name="twitter:title" content="{{title}}">
    <meta name="twitter:description" content="Vermont Code Camp is a full day event that brings together technology community members, students and professionals from around Vermont and beyond.">
    <meta name="twitter:image" content="https://deploy-preview-6--vt-code.netlify.com/assets/event-sign.jpg">

    <link href="https://fonts.googleapis.com/css?family=PT+Sans|Inconsolata" rel="stylesheet">

    <!-- capture the CSS content as a Nunjucks variable -->
    {% set css %}{% include "styles.css" %}{% endset %}
    <!-- feed it through our cssmin filter to minify -->
    <style type="text/css">{{ css | cssmin | safe }}</style>
</head>

<body class="{{title}}">

    <header class="header">
        <a href="/" aria-label="Home Page" class="logo img-wrap" style="--aspect-ratio:440/80;">
            {% include "assets/logo/vermont-code-camp-logo-light.svg" %}
            {# <img src="/assets/vermont-code-camp-logo-light.svg" alt="Vermont Code Camp" /> #}
        </a>
    </header>
    <nav class="header">
        <ul class="nav-buttons">
            <li><a href="/" class='code {{ "active" if "/" == page.url }}'>Attend<span class="hide-xs text-muted" aria-hidden="true">();</span></a></li>
            <li><a href="/speak/" class='code {{ "active" if "/speak/" in page.url }}'>Speak<span class="hide-xs text-muted" aria-hidden="true">();</span></a></li>
            <li><a href="/sponsor/" class='code {{ "active" if "/sponsor/" in page.url }}'>Sponsor<span class="hide-xs text-muted" aria-hidden="true">();</span></a></li>
        </ul>
    </nav>

    <main class="content">
        
        {{ content | safe }}
    
    </main>


    <footer class="footer">
        <div class="copy-line">
            <span class="copyright">&copy; Vermont Code Camp 2019 </span>
            <span class="d-flex">
                <a href="https://twitter.com/VTCodeCamp" aria-label="Follow us on Twitter">
                    {% include "assets/fa/twitter.svg" %}
                </a>
                <a href="https://github.com/vtcodecamp/2019.vtcodecamp.org" aria-label="Github Respository">
                    {% include "assets/fa/github.svg" %}
                </a>
            </span>
        </div>
        <ul class="nav-links">
            <li><a href="/conduct/" class='{{ "active" if "/conduct/" in page.url }}'>Conduct</a></li>
            <li><a href="/diversity/" class='{{ "active" if "/diversity/" in page.url }}'>Diversity</a></li>
            <li><a href="/parking/" class='{{ "active" if "/parking/" in page.url }}'>Parking</a></li>
        </ul>
    </footer>
</body>

</html>